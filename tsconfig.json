{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "declaration": true,
    "strictPropertyInitialization": false
  },
  "types": [ "forge-viewer", "three" ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": []
}